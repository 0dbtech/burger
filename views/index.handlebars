<h1>Burgers!</h1>


<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="burger-text" name="burger_name">
  </div>
{{!-- 
  <div class="form-group">
    <label for="sleepy">Sleepy?</label><br>
    <input type="radio" name="devoured" value="1" > Sleepy!<br>
    <input type="radio" name="devoured" value="0" checked> Awake
  </div> --}}

  <button type="submit">Add Burger</button>
</form>


<h2>Choose a burger to eat!</h2>

<ul>
  {{!-- Call table name burgers --}}
  {{#each burgers}}
    {{#unless devoured}}

      <div class="devour">
      <p><span class="label">Burger #{{this.id}}</span>. {{this.burger_name}}</p>
      <button type="submit" id="devour-me" data-id="{{id}}" data-devoured="{{devoured}}">Devour dat burger!</button>
      {{!-- <p><span class="label">Burger Name:</span> {{this.burger_name}}</p>
      <p><span class="label">Burger Devoured:</span> {{this.devoured}}</p> --}}

  </div>
    {{/unless}}
  {{/each}}

  {{!-- </div> --}}
</ul>

